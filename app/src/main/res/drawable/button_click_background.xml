<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:angle="0" android:startColor="@color/color_red_dark" android:endColor="@color/color_red_dark"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:angle="0" android:startColor="@color/color_red" android:endColor="@color/color_red"/>
        </shape>
    </item>
</selector>